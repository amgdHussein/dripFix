{
  // Auto Save
  // "files.autoSaveDelay": 10,
  "files.autoSave": "onFocusChange",

  // Formatter
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "typescript.inlayHints.parameterNames.enabled": "all", // Development
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.preferences.importModuleSpecifier": "relative", // Deployment
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.organizeImports": "explicit"
  },

  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  // To better view
  "typelens.unusedcolor": "None",

  // Unknown words
  "cSpell.words": ["amgad", "datasource", "datasources", "dtos", "firestore", "gcloud", "nestjs", "usecases"]
}
